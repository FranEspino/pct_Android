<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        app:cardCornerRadius="7dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="start"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titlecite"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/sparta_bold"
                    android:padding="5dp"
                    android:text="Titulo de cita"
                    android:textColor="#19142B"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="Un comentario de como se ve el card con arto contenido del comentario si puodemos verlop"
                    android:textColor="#19142B"
                    android:textSize="10dp" />
                <TextView
                    android:id="@+id/tv_linkreunion"
                    android:layout_width="180dp"
                    android:clickable="true"
                    android:linksClickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:autoLink="web"
                    android:text="https://meet.google.com/vbu-fidw-hjc?pli=1authuser=1"
                    android:textColor="#0433DF"
                    android:textSize="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:text="Hora: "
                        android:textColor="#000"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/tv_hora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:text="4:50 pm"
                        android:textColor="#000"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:text="Fecha: "
                        android:textColor="#000"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/tv_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_centerInParent="true"
                        android:padding="5dp"
                        android:text="12/11/21"
                        android:textColor="#000"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>