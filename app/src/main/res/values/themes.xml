<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParqueCientificoUNCP" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#0A5716</item>
        <item name="colorPrimaryDark">#05290B</item>
        <item name="colorAccent">#7AFF8F</item>
        <item name="android:statusBarColor">#05290B</item>

    </style>

    <style name="Theme.ParqueCientificoUNCP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#05290B</item>

    </style>

    <style name="Theme.ParqueCientificoUNCP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ParqueCientificoUNCP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RaisedButtom" parent="Theme.AppCompat.Light">
        <!-- First -->
        <item name="colorButtonNormal">#2E5B30</item>
        <!-- Second -->
        <item name="colorControlHighlight">#2E5B62</item>
        <!-- Third -->
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Change Color appearance in the hint -->
    <style name="EditTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="EditTextBlack" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0A5716</item>
        <item name="colorPrimaryDark">#05290B</item>
        <item name="colorAccent">#7AFF8F</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="EditTextComment" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>